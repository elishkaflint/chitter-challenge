  <link rel="stylesheet" href="/style.css"/>

<div id=body>

  <div id="header">
    <div id="title">
      chitter
    </div>
    <div id="tagline">
      Where too many chits make a chat
    </div>
  </div>

  <div id="warning"><%= flash[:notice] %></div>

  <div id="sign_up">
    <p>Please enter your details:</p>
    <form action="/sign-up" method="post">
