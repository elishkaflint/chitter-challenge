        <div class="field"><div class="label">Username</div><div class="box"><input type="text" name="username"></div></div>
        <div class="field"><div class="label">Email</div><div class="box"><input type="text" name="email"></div></div>
        <div class="field"><div class="label">Password</div><div class="box"><input type="password" name="password"></div></div>
      <input type="submit" value="Sign Up">
    </form>
  </div>


</div>
